        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/burgers_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pastas_id"

        android:text="Burgers"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/salads_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/burgers_id"

        android:text="Salads"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/ribs_n_wings_id"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/salads_id"

        android:text="Ribs and Wings"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/deserts_id"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ribs_n_wings_id"

        android:text="Deserts"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/milkshakes_id"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deserts_id"

        android:text="Milkshakes"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"/>




